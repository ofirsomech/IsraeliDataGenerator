<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<PackageId>IsraeliDataGenerator</PackageId>
		<Version>2.3.0</Version>
		<Authors>Ofir Somech</Authors>
		<Company>Ofir Somech</Company>
		<Description>A simple Israeli data generator for .NET projects</Description>
		<Copyright>Copyright Â© Ofir Somech 2023</Copyright>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Title>IsraeliDataGenerator</Title>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageIcon>israel.png</PackageIcon>
	</PropertyGroup>
	<ItemGroup>
		<None Include="..\..\..\israel.png">
		  <Pack>True</Pack>
		  <PackagePath>\</PackagePath>
		</None>
		<None Include="..\..\..\LICENSE">
		  <Pack>True</Pack>
		  <PackagePath>\</PackagePath>
		</None>
		<None Include="..\..\..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
</Project>